<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="financial_report_l10n_ch" model="account.financial.html.report">
        <field name="name">VAT</field>
        <field name="report_type">date_range</field>
        <field name='parent_id' ref='l10n_ch.account_reports_ch_statements_menu'/>
    </record>
    <record id="financial_report_line_ch_01" model="account.financial.html.report.line">
        <field name="name">500 Solde de TVA a payer a l'AFC</field>
        <field name="code">CHTAX_500</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="0"/>
        <field name="formulas">balance = CHTAX_399.balance + CHTAX_479.balance</field>
        <field name="financial_report_id" ref="financial_report_l10n_ch"/>
    </record>
    <record id="financial_report_line_ch_0101" model="account.financial.html.report.line">
        <field name="name">399 TVA Due </field>
        <field name="code">CHTAX_399</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="1"/>
        <field name="formulas">balance = CHTAX_301b.balance + CHTAX_311b.balance + CHTAX_341b.balance</field>
        <field name="parent_id" ref="financial_report_line_ch_01"/>
    </record>
    <record id="financial_report_line_ch_010101" model="account.financial.html.report.line">
        <field name="name">301b TVA due a 8.0% (TN)</field>
        <field name="code">CHTAX_301b</field>
        <field name="sequence" eval="1"/>
        <field name="level" eval="2"/>
        <field name="domain" eval="[('tax_line_id.tag_ids', 'in', [ref('l10n_ch.tag_8')])]"/>
        <field name="formulas">balance = - sum.balance</field>
        <field name="parent_id" ref="financial_report_line_ch_0101"/>
        <field name="show_domain">never</field>
    </record>
