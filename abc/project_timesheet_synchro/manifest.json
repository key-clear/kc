{
  "manifest_version": 2,

  "name": "Odoo Timesheets",
  "description": "This extension is used to create timesheet entries for Odoo",
  "version": "1.0",
  "icons" :{
      "48" : "static/src/img/icon.png"
  },

  "browser_action": {
    "default_popup": "timesheet.html",
    "default_icon" : "static/src/img/icon.png"
  },
  "permissions": [
        "cookies",
        "http://*/",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' 'unsafe-eval'"
}